class Boton:
        def __init__(self, posx1, posx2, posy1, posy2):
                self.posx1 = posx1
                self.posx2 = posx2
                self.posy1 = posy1
                self.posy2 = posy2
        def click(self,pos, anti_click, boton):
                if self.posx1 < pos[0] < self.posx2 and self.posy1 < pos[1] < self.posy2 and boton and anti_click:
                        return True
